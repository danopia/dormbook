<% content_for :title, @course.title %>
<h2><%= @course.title %></h2>
<h3><%= @course.category %> <%= @course.level %>-<%= @course.section %></h3>

<p>
  <b>CRN:</b>
  <%= @course.crn %>
</p>

<p>
  <b><%= @course.credits %></b>
  credits
</p>

<% @course.sessions.each do |sess| -%>
<h3><%= sess.days_s %> at <%= sess.starts_at.strftime '%l:%M %p' %></h3>
<p>Known students:</p>
<ul>
<% sess.schedules.each do |s| -%>
  <li><%=link_to s.roomie.name, s %></li>
<% end -%>
</ul>
<% end -%>

